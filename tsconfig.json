{
    "compilerOptions": {
        "target": "es5",
        "jsx": "react",
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "App": ["src/App"],
            "src/*": ["./src/*"],
        }
    },
    "exclude": [
        "node_modules",
        "**/*.js",
        "**/*.jsx",
        "**/*.test.jsx",
        "**/*.test.js",
        "**/*.test.ts",
        "**/*.test.tsx"
        ],
    "include": [
        "**/*.ts",
        "**/*.tsx"
        ]
}